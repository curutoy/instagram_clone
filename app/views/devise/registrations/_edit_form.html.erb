<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="conrtainer">
    <div class="row edit-field">
      <div class="col-sm-3">
        <%= f.label :name ,class: "edit_item" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :name, autofocus: true, class: "form-control", :placeholder => "名前", autocomplete: "name" %>
      </div>
    </div>
    
    <div class="row edit-field">
      <div class="col-sm-3">
        <%= f.label :user_name ,class: "edit_item" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :user_name, autofocus: true, class: "form-control", :placeholder => "ユーザー名", autocomplete: "name" %>
      </div>
    </div>
    
    <div class="row edit-field">
      <div class="col-sm-3">
        <%= f.label :website ,class: "edit_item" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :website, autofocus: true, class: "form-control", :placeholder => "Webサイト", autocomplete: "name" %>
      </div>
    </div>
    
    <div class="row edit-field">
      <div class="col-sm-3">
        <%= f.label :profile ,class: "edit_item" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :profile, autofocus: true, class: "form-control", :placeholder => "自己紹介", autocomplete: "name" %>
      </div>
    </div>
    
    <div class="row edit-field">
      <div class="col-sm-3">
      </div>
      <div class="col-sm-9">
       <p class="personal">個人の情報</p>
       <p class="personal-explanation">アカウントがビジネス、ペットなどに使用されている場合でも、個人の情報を入力してください。これは公開プロフィールでは表示されません。</p>
      </div>
    </div>
    
    <div class="row edit-field">
      <div class="col-sm-3">
        <%= f.label :email ,class: "edit_item" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :email, autofocus: true, class: "form-control", :placeholder => "メールアドレス", autocomplete: "name" %>
      </div>
    </div>
    
    <div class="row edit-field">
      <div class="col-sm-3">
        <%= f.label :tel ,class: "edit_item" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :tel, autofocus: true, class: "form-control", :placeholder => "電話番号", autocomplete: "name" %>
      </div>
    </div>
    
    <div class="row edit-field">
      <div class="col-sm-3">
        <%= f.label :gender ,class: "edit_item" %>
      </div>
      <div class="col-sm-9">
        <%= f.radio_button :gender, "男" %>男 <%= f.radio_button :gender, "女" %>女
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    
     <div class="row edit-field">
      <div class="col-sm-3">
        <%= f.label :password ,class: "edit_item" %></br>
      </div>
      <div class="col-sm-9">
        <p class="password-explanation">（パスワードに変更のない場合は入力しないでください）</p>
        <%= f.text_field :password, autofocus: true, class: "form-control", :placeholder => "新しいパスワード", autocomplete: "name" %>
      </div>
    </div>
    
    <div class="row edit-field">
      <div class="col-sm-3">
        <%= f.label :password_confirmation ,class: "edit_item" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :password_confirmation, autofocus: true, class: "form-control", :placeholder => "新しいパスワード（確認用）", autocomplete: "name" %>
      </div>
    </div>
    
    <div class="row edit-field">
      <div class="col-sm-3">
        <%= f.label :current_password ,class: "edit_item" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :current_password, autofocus: true, class: "form-control", :placeholder => "現在のパスワード", autocomplete: "name" %>
      </div>
    </div>
    
     <div class="row edit-field">
      <div class="col-sm-3">
      </div>
      <div class="col-sm-9">
        <div class="actions">
          <%= f.submit "送信" , :class => "btn btn-primary" %>
        </div>
      </div>
    </div>
    
  </div>
  
<% end %>