<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.text_field :name, autofocus: true, class: "form-control", :placeholder => "名前" %>
  </div>
  
  <div class="field">
    <%= f.text_field :user_name , class: "form-control", :placeholder => "ユーザー名" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "email" , class: "form-control", :placeholder => "Eメール" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password" , class: "form-control", :placeholder => "パスワード（6文字以上)" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control", :placeholder => "パスワード（確認用)" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" , :class => "btn btn-primary" %>
  </div>
<% end %>