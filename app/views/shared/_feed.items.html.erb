<% @microposts.each do |micropost| %>
  <li class="microposts-index" id="micropost-<%= micropost.id %>">
    <div class="microposts-user">
      <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
      <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    </div>
    <div class="microposts-img">
      <%= image_tag micropost.display_image %>
    </div>
    <div class="microposts-img-bottom">
      <%= render "favorites/favorite", micropost: micropost %>
      <div class="microposts-content">
        <%= micropost.content %>
      </div>
      <div class="microposts-comment-link">
        <a href="<%= micropost_path(micropost) %>">
          コメント
          <strong id="comment" class="count">
            <%= micropost.comments.count %>
          </strong>
          件をすべて見る
        </a> 
      </div>
      <span class="timestamp">
        <%= time_ago_in_words(micropost.created_at) %> 前
        <% if micropost.user == current_user %> 
          <%= link_to "削除", micropost, method: :delete,
                                           data: { confirm: "本当に削除しますか？" } %>
        <% end %>
      </span>
    </div>
    <%= render "comments/comment_form", micropost: micropost, comment: @comment %>
  </li>
<% end %>